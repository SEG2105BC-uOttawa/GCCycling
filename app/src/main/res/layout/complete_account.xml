<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/completeAccountTxt"
        android:layout_width="290dp"
        android:layout_height="86dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="20dp"
        android:gravity="clip_vertical|center_horizontal"
        android:text="Complete Your Account"
        android:textColor="#03A9F4"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/completeAccountTxt">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Social Media Link:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/socialTxt"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:ems="10"
                android:hint="Enter Link (Mandatory)"
                android:inputType="text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Contact Name:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/nameTxt"
                android:layout_width="239dp"
                android:layout_height="66dp"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Enter Contact Phone Number:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/phoneTxt"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:ems="10"
                android:hint="Enter Number (Mandatory)"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Club Name"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/clubNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="text" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="149dp"
        android:layout_height="61dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="100dp"
        android:onClick="complete"
        android:text="Complete Account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warningTxt" />

    <TextView
        android:id="@+id/warningTxt"
        android:layout_width="201dp"
        android:layout_height="78dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="114dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>